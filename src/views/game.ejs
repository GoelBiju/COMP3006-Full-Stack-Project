      <label>Username:</label>
      <input id="player-name" />
      <button id="join">Join</button>

      <p id="conn-status">No connection</p>
      <p id="game-status">No game</p>

      <p id="opponent-name">No opponent</p>
      <p id="player-turn"></p>
